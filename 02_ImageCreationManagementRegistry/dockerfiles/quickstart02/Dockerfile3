# FROM is always first, unless ARG is used. When ARG is before FROM, the only instruction that can use 
ARG TAGVERSION=6
FROM centos:${TAGVERSION}

LABEL maintainer="latest@email.com"

RUN yum update -y && \
    yum install httpd net-tools -y && \
    mkdir -p /run/httpd && \
    rm -rf /run/http/* /tmp/httpd*

COPY index.html /var/www/html/

CMD echo "remember to check your container IP address"

ENV ENVIRONMENT="production"

VOLUME /mymount 

EXPOSE 80

ENTRYPOINT apachectl "-DFOREGROUND"